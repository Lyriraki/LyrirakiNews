<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_author"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/putih"
        android:background="@drawable/backgroud_by_author">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/dicoding_intern"
            android:id="@+id/by_authorphoto_news"
            android:layout_margin="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/by_authorname_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/author"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-black"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>